<scene name="panorama4" onstart="m2();">
<action name="m2">
activatespot(scene5, 0);
set(autorotate.speed,"10");
if (sto==1,
set(autorotate.enabled,true); set(plugin[onrotate].visible,false); set(plugin[offrotate].visible,true);,
